# This is the top-most editorconfig
root = true

[*]
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{bash,sh}]
indent_style = space
indent_size = 2

[*.tpl]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[features/**.feature]
indent_stype = tab
indent_size = 4
trim_trailing_whitespace = true

[pom.xml]
indent_size = 2
trim_trailing_whitespace = true
